---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import ImageGenerator from '../components/ImageGenerator.astro';
import ImageGallery from '../components/ImageGallery.astro';
import DynamicWatermark from '../components/DynamicWatermark.astro';
---

<Layout title="Dashboard - PicFusion">
  <div class="flex min-h-screen bg-gray-100 relative">
    <Sidebar />
    <main class="flex-1 p-6">
      <h1 class="text-3xl font-bold mb-8">Image Generation Dashboard</h1>
      <div class="grid gap-6">
        <ImageGenerator />
        <ImageGallery />
      </div>
    </main>
    <DynamicWatermark />
  </div>
</Layout>
